<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray4"
    android:orientation="vertical"
    android:padding="20dp">

    <nirmesh.ndtv.util.TypefacedTextView
        style="@style/textLBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SET EMERGENCY TIME"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <nirmesh.ndtv.util.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Number of Hours"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/hour"
            style="@style/textSBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="HH"
            android:inputType="number"
            android:textColor="@color/white"
            android:textColorHint="@color/cardbackground" />

        <nirmesh.ndtv.util.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Enter Number of Minutes"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/minute"
            style="@style/textSBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MM"
            android:inputType="number"
            android:textColor="@color/white"
            android:textColorHint="@color/cardbackground" />
    </LinearLayout>

    <TextView
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="22dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="SUBMIT"
        android:textColor="@color/white" />

</LinearLayout>